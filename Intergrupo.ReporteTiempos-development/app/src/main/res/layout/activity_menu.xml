<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_perfil"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Ui.Controller.MenuActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <ImageView
            android:clickable="true"
            android:id="@+id/settingsMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_gravity="end"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top">

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/menu_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                app:sriv_oval="true" />

            <TextView
                android:id="@+id/Menu_Name_User"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Leidy Carolina Zuluaga Bastidas"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="bottom|center"
                android:text="¿Qué quieres hacer hoy?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF" />
        </LinearLayout>



    </FrameLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/menu_timereport"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">

        <LinearLayout
            android:id="@+id/Menu_RegisterTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/menu_ivReportarTiempos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/reportar_tiempos" />

            <TextView
                android:id="@+id/first_item_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Reportar tiempos"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/Menu_viewtimereport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30sp"
            android:gravity="center">

            <ImageView
                android:id="@+id/menu_ivVerReportes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ver_reporte" />


            <TextView
                android:id="@+id/second_item_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ver reportes"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
