<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.intergrupo.reportedetiemposig.Ui.Controller.register">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#014BA0"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/title_activity_reporter"
            app:titleTextColor="@color/white"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_weight=".85">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/register_lnForManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_weight=".2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#034CA1"
                        android:text="@string/NameManager" />

                    <EditText
                        android:id="@+id/register_edManager"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginRight="15sp"
                        android:background="@null"
                        android:hint="@string/hintSelectManager"
                        android:backgroundTint="@android:color/transparent">


                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="0.5dp"
                        android:background="@android:color/darker_gray"></TextView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/register_lnForNameProject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_weight=".2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#034CA1"
                        android:text="@string/NameConceptHour" />

                    <EditText
                        android:id="@+id/register_edConceptHour"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginRight="15sp"
                        android:background="@null"
                        android:focusable="false"
                        android:hint="@string/hintSelectConceptHour"
                        android:backgroundTint="@android:color/transparent">


                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="0.5dp"
                        android:background="@android:color/darker_gray"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/register_lnForClassificationConceptHour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_weight=".2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#034CA1"
                        android:text="@string/NameClassificationConceptHour" />

                    <EditText
                        android:id="@+id/register_edClassificationConceptHour"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginRight="15sp"
                        android:background="@null"
                        android:editable="false"
                        android:hint="@string/hintSelectClassificationConceptHour"
                        android:backgroundTint="@android:color/transparent">


                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="0.5dp"
                        android:background="@android:color/darker_gray"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/register_lnForProyect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_weight=".2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#034CA1"
                        android:text="@string/NameProyect" />

                    <EditText
                        android:id="@+id/register_edProyect"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginRight="15sp"
                        android:background="@null"
                        android:hint="@string/hintSelectProyect"
                        android:backgroundTint="@android:color/transparent">


                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="0.5dp"
                        android:background="@android:color/darker_gray"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/register_lnForfunctionality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_weight=".2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#034CA1"
                        android:text="@string/Namefunctionality" />

                    <EditText
                        android:id="@+id/register_edfunctionality"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginRight="15sp"
                        android:background="@null"
                        android:hint="@string/hintSelectfunctionality"
                        android:backgroundTint="@android:color/transparent">


                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="0.5dp"
                        android:background="@android:color/darker_gray"></TextView>

                </LinearLayout>

                <LinearLayout
                android:id="@+id/register_lnForDiscipline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_weight=".2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#034CA1"
                    android:text="@string/Namediscipline" />

                <EditText
                    android:id="@+id/register_edDiscipline"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginRight="15sp"
                    android:background="@null"
                    android:hint="@string/hintSelectdiscipline"
                    android:backgroundTint="@android:color/transparent">


                </EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"></TextView>

            </LinearLayout>

                <LinearLayout
                    android:id="@+id/register_lnForActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_weight=".2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#034CA1"
                        android:text="@string/NameActvity" />

                    <EditText
                        android:id="@+id/register_edActivity"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginRight="15sp"
                        android:focusable="false"
                        android:background="@null"
                        android:hint="@string/hintSelectActivity"
                        android:backgroundTint="@android:color/transparent">


                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="0.5dp"
                        android:background="@android:color/darker_gray"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/register_lnForActivityCompleted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_weight=".2"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/register_cbxActivity"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginLeft="-7dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginRight="15sp"
                        android:background="@null"
                        android:hint="@string/hintSelectActivityCompleted"
                        android:backgroundTint="@android:color/transparent">


                    </CheckBox>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="0.5dp"
                        android:background="@android:color/darker_gray"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/register_lnDateAndHour"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="15sp"
                        android:layout_weight=".2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".55"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".1"
                                android:textColor="#034CA1"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/date" />

                            <EditText
                                android:id="@+id/edDate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10sp"
                                android:layout_weight=".9"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:background="@null"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="@string/hintSelectDate" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10sp"
                                android:layout_height="0.5dp"
                                android:background="@android:color/darker_gray"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".45"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".1"
                                android:textColor="#034CA1"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/hour" />

                            <EditText
                                android:id="@+id/edHour"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="15sp"
                                android:layout_marginTop="10sp"
                                android:layout_weight=".9"
                                android:maxLength="4"
                                android:background="@null"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:inputType="numberDecimal"
                                android:hint="@string/hintHours"
                                android:backgroundTint="@android:color/transparent" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10sp"
                                android:layout_height="0.5dp"
                                android:background="@android:color/darker_gray"></TextView>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/register_lnForDescriptionActivity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15sp"
                    android:layout_weight=".2"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#034CA1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/description" />


                    <EditText
                        android:id="@+id/edDescrptionActivity"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginTop="10sp"
                        android:background="@null"
                        android:hint="@string/hintDescription"
                        android:layout_marginRight="15sp"
                        android:backgroundTint="@android:color/transparent">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="0.5dp"
                        android:background="@android:color/darker_gray"></TextView>


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnReportar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:background="#014BA0"
                android:text="@string/register"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px" >
        <requestFocus />
    </LinearLayout>


</LinearLayout>

